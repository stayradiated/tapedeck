{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "remix build && ncc build ./build/index.js",
    "dev": "remix dev",
    "start": "remix-serve build",
    "tidy": "xo --fix ./app"
  },
  "dependencies": {
    "@remix-run/node": "^1.12.0",
    "@remix-run/react": "^1.12.0",
    "@remix-run/serve": "^1.12.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "3.20.6",
    "@stayradiated/error-boundary": "4.1.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.12.0",
    "@remix-run/eslint-config": "^1.12.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.10",
    "@vercel/ncc": "0.36.1",
    "eslint": "^8.34.0",
    "typescript": "^4.9.5",
    "xo": "0.53.1"
  },
  "engines": {
    "node": ">=14"
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "rules": {
      "import/extensions": "off",
      "n/file-extension-in-import": "off",
      "unicorn/text-encoding-identifier-case": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
